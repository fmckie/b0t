# Required: Core Services
# Get OpenAI key: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Get Twitter API credentials: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=
TWITTER_BEARER_TOKEN=
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# Generate with: openssl rand -base64 32
AUTH_SECRET=
AUTH_URL=http://localhost:3000

# Admin login credentials
ADMIN_EMAIL=admin@socialcat.com
ADMIN_PASSWORD=admin

# Optional: Additional Platforms
# YouTube: https://console.cloud.google.com/apis/credentials
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REFRESH_TOKEN=
YOUTUBE_REDIRECT_URI=http://localhost:3000/api/youtube/callback

# Instagram: https://developers.facebook.com/apps
INSTAGRAM_ACCESS_TOKEN=

# Optional: Production Infrastructure
# Database (auto-provisioned on Railway, leave empty for local SQLite)
DATABASE_URL=

# Redis (for persistent job queue - https://upstash.com or Railway Redis)
REDIS_URL=

# Upstash Redis (for rate limiting - https://upstash.com)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# RapidAPI (for extended features - https://rapidapi.com/hub)
RAPIDAPI_KEY=

# Environment
NODE_ENV=development
LOG_LEVEL=info
