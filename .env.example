WORDPRESS_USERNAME=your-username
WORDPRESS_APP_PASSWORD=xxxx xxxx xxxx xxxx

# Required: Database Configuration
# PostgreSQL connection string (Docker local dev or Railway production)
# Local: postgresql://postgres:postgres@localhost:5433/social_cat_dev
# Production: Auto-provisioned on Railway
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/social_cat_dev

# Redis (for persistent job queue - https://upstash.com or Railway Redis)
REDIS_URL=

# Upstash Redis (for rate limiting - https://upstash.com)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# RapidAPI (for extended features - https://rapidapi.com/hub)
RAPIDAPI_KEY=

# Environment
NODE_ENV=development
LOG_LEVEL=info
